<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gamechanger.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GC Cordova</name>
    <description>
        Gamechanger Cordova Framework
    </description>
    <author email="nick@nickalie.com" href="https://nickalie.com">
        Nick Glushchenko
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~7.1.1" />
    <plugin name="cordova-plugin-audioinput" spec="1.0.1" />
    <plugin name="cordova-plugin-remote-injection" spec="0.5.2" />
    <plugin name="cordova-plugin-flashlight" spec="3.2.0" />
    <plugin name="cordova-plugin-insomnia" spec="4.3.0" />
    <plugin name="cordova-plugin-dialogs" spec="2.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="3.0.0" />
    <plugin name="cordova-plugin-android-permissions" spec="1.0.0" />
    <plugin name="cordova-plugin-media-capture" spec="3.0.2" />
    <plugin name="cordova-plugin-x-socialsharing" spec="5.4.1" />
    <plugin name="phonegap-plugin-media-stream" spec="1.2.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
</widget>
